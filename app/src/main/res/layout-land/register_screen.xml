<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F30B1A24"
    tools:context=".RegisterActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation = "vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.495"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.498">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:orientation="vertical"
            android:layout_marginBottom="2sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cutefont"
                    android:text="@string/username"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:autofillHints="@string/hint_username"
                    android:fontFamily="@font/cutefont"
                    android:hint="@string/hint_username"
                    android:inputType="text"
                    android:textColorHint="#f2ed6f"
                    android:textSize="25sp" />
            </LinearLayout>
            <!---Password-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cutefont"
                    android:text="@string/password"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_password"
                    android:fontFamily="@font/cutefont"
                    android:id = "@+id/pass"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:textColorHint="#f2ed6f"
                    android:textSize="25sp" />
            </LinearLayout>
            <!---Retype Password-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cutefont"
                    android:text="@string/repassword"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_repass"
                    android:fontFamily="@font/cutefont"
                    android:hint="@string/hint_repass"
                    android:id = "@+id/repass"
                    android:inputType="textPassword"
                    android:textColorHint="#f2ed6f"
                    android:textSize="25sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cutefont"
                    android:text="@string/age"
                    android:textColor="#FFEB3B"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/hint_age"
                    android:fontFamily="@font/cutefont"
                    android:hint="@string/hint_age"
                    android:id = "@+id/age"
                    android:inputType="number"
                    android:textColorHint="#f2ed6f"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/cutefont"
            android:onClick="goBack"
            android:text="@string/back"
            android:textColor="#FFEB3B"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/cutefont"
            android:text="@string/register"
            android:id = "@+id/register"
            android:textColor="#FFEB3B"
            android:textSize="25sp" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>

</android.support.constraint.ConstraintLayout>